{
  "manifest_version": 2,
  "name": "Robin des boites",
  "short_name": "robindesboites",
  "description": "This extension will add Robin des boites' Amazon tag to all amazon links",
  "version": "1.0",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  "homepage_url": "http://robindesboites.fr/",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab", 
    "webRequest", 
    "webRequestBlocking", 
    "https://www.amazon.cn/*",
    "https://www.amazon.in/*",
    "https://www.amazon.co.jp/*",
    "https://www.amazon.com.sg/*",
    "https://www.amazon.com.tr/*",
    "https://www.amazon.ae/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.de/*",
    "https://www.amazon.it/*",
    "https://www.amazon.nl/*",
    "https://www.amazon.es/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com.mx/*",
    "https://www.amazon.com/*",
    "https://www.amazon.com.au/*",
    "https://www.amazon.com.br/*"
   ]
}
